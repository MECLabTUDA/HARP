{
    "name": "inpainting_bcss", 
    "gpu_ids": [0], 
    "seed" : -1,
    "finetune_norm": false,

    "path": {
        "base_dir": "experiments",
        "results": "results",
        "checkpoint": "checkpoint"
        // "resume_state": "./experiments/train_inpainting_bcss_240118_000504/checkpoint/1000"
        // "resume_state": null // 100
    },

    "datasets": {
        "train": { 
            "which_dataset": {
                "name": ["data.dataset", "InpaintDataset"], 
                "args":{
                    "data_root": "", //UPDATE,
                    "data_len": -1,
                    "image_size":[256, 256],
                    "mask_config": {
                        "mask_mode": "hybrid"
                    }
                } 
            },
            "dataloader":{
                "validation_split": 2, 
                "args":{ 
                    "batch_size": 8, 
                    "num_workers": 4,
                    "shuffle": true,
                    "pin_memory": true,
                    "drop_last": true
                },
                "val_args":{ 
                    "batch_size": 2,
                    "num_workers": 4,
                    "shuffle": false,
                    "pin_memory": true,
                    "drop_last": false
                }
            }
        },
        "test": { 
            "which_dataset": {
                "name": "InpaintDataset", 
                "args":{
                    "data_root": "", //UPDATE
                    "mask_config": {
                        "mask_mode": "hybrid"
                    }
                }
            },
            "dataloader":{
                "args":{
                    "batch_size": 8,
                    "num_workers": 4,
                    "pin_memory": true
                }
            }
        }
    },

    "model": { 
        "which_model": { 
            "name": ["models.model", "Palette"], 
            "args": {
                "sample_num": 8, 
                "task": "inpainting",
                "ema_scheduler": {
                    "ema_start": 1,
                    "ema_iter": 1,
                    "ema_decay": 0.9999
                },
                "optimizers": [
                    { "lr": 5e-5, "weight_decay": 0}
                ]
            }
        }, 
        "which_networks": [
            {
                "name": ["models.network", "Network"],
                "args": { 
                    "init_type": "kaiming",
                    "module_name": "guided_diffusion",
                    "unet": {
                        "in_channel": 6,
                        "out_channel": 3,
                        "inner_channel": 64,
                        "channel_mults": [1,2,4,8],
                        "attn_res": [16],
                        "num_head_channels": 32,
                        "res_blocks": 2,
                        "dropout": 0.2,
                        "image_size": 256
                    },
                    "beta_schedule": {
                        "train": {
                            "schedule": "linear",
                            "n_timestep": 1000,
                            "linear_start": 1e-6,
                            "linear_end": 0.01
                        },
                        "test": {
                            "schedule": "linear",
                            "n_timestep": 250,
                            "linear_start": 1e-4,
                            "linear_end": 0.09
                        }
                    }
                }
            }
        ],
        "which_losses": [ 
            "mse_loss"
        ],
        "which_metrics": [ 
            "mae"
        ]
    },

    "train": { 
        "n_epoch": 1e8, 
        "n_iter": 1e8, 
        "val_epoch": 1, 
        "save_checkpoint_epoch": 25,
        "log_iter": 1e4, 
        "tensorboard" : false 
    }
}
